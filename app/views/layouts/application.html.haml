!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Rails Brakeman Service"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="favicon.ico" rel="shortcut icon")
    %link(href="assets/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="assets/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="assets/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    = render 'shared/header'
    %section#share= render "shared/addthis"
    #flash
      .container-fluid
        = notice_message
    .container-fluid
      .row-fluid
        .span3= render 'shared/sidebar'
        .span9
          .pledgie= render 'shared/pledgie'
          = yield
    = render 'shared/footer'
    = javascript_include_tag "application", "http://s7.addthis.com/js/250/addthis_widget.js#pubid=flyerhzm"
